        </div>
        
        
    </div>
    
    
</div>

@code {
    [Inject] private SharedDataService SharedData { get; set; }

    [Parameter]
    public EventCallback<bool> OnDataFetched { get; set; }

    [Parameter]
    public EventCallback<bool> BDFetched { get; set; }
    //[Parameter] public RenderFragment? ChildContent { get; set; }

    private bool IsVisible { get; set; } = true;

    private bool isLoading = false;

    public string codeNEQ = string.Empty;
    public string codeRBQ = string.Empty;

    public string codeNEQError = string.Empty;
    public string codeRBQError = string.Empty;

    public List<Licencesrbq> currentLicences = new List<Licencesrbq>();

    public async Task FetchDataDB()
    {
        try
        {
            // Appel à la base de données pour récupérer les régions
            currentLicences = await dbContext.Licencesrbqs.ToListAsync();

        }
        catch (Exception ex)
        {
            codeRBQError = "Erreur lors de la récupération à la BD, veuillez réessayer";
            Console.WriteLine(ex.Message);
        }
        await BDFetched.InvokeAsync(true);        
    }



    public void ShowModal()
    {
        IsVisible = true;
        StateHasChanged();
    }

    public void CloseModal()
    {
        IsVisible = false;
        StateHasChanged();
    }

    public void HandleSubmit()
    {
        codeNEQError = string.Empty;
        codeRBQError = string.Empty;

        var isValidNEQ = true;
        var isValidRBQ = true;

        string cleanNEQ = Regex.Replace(codeNEQ, @"-", "");
        bool hasNonDigitNEQ = Regex.IsMatch(cleanNEQ, @"\D");

        string cleanRBQ = Regex.Replace(codeRBQ, @"-", "");
        bool hasNonDigit = Regex.IsMatch(cleanRBQ, @"\D");

        if(!string.IsNullOrEmpty(codeNEQ))
        {
            if(codeNEQ.Length != 10)
            {
                codeNEQError = "Veuillez entrer un code NEQ valide";
                isValidNEQ = false;
            }
            if (hasNonDigitNEQ)
            {
                codeNEQError = "Un code NEQ ne peux que contenir des chiffres";
                isValidNEQ = false;
            }
            if (!IsValidNEQFormat(codeNEQ))
            {
                codeNEQError = "Le NEQ doit être un numéro de 10 chiffres commençant par 11, 22, 33 ou 88.";
                isValidNEQ = false;
            }
        }
        else
        {            
            isValidNEQ = false;
        }


        if (!string.IsNullOrEmpty(codeRBQ))
        {
            if (codeRBQ.Length != 12)
            {
                codeRBQError = "Veuillez entrer un code RBQ valide";
                isValidRBQ = false;
            }
            else if(hasNonDigit)
            {
                codeRBQError = "Un code RBQ ne peux que contenir des chiffres";
                isValidRBQ = false;
            }
            else
            {
                foreach (Licencesrbq licence in currentLicences)
                {

                    if (licence.NumLicence == cleanRBQ)
                    {
                        codeRBQError = "Cette licence RBQ est déjà assigné. Veulliez confirmer qu'elle est bien inscrite";
                        isValidRBQ = false;
                    }
                }
            }
        }
        else
        {
            isValidRBQ = false;
        }

        if (string.IsNullOrEmpty(codeRBQ) && string.IsNullOrEmpty(codeNEQ))
        {
            codeNEQError = "Veuillez remplir l'un des deux champs";

            isValidNEQ = false;
            isValidRBQ = false;
        }


        if (isValidNEQ)
        {
            FetchRecordNEQ();
        }
        else if (isValidRBQ)
        {
            FetchRecordRBQ();
        }
        else
        {
            isLoading = false;
        }
    }

    private bool IsNumeric(string input)
    {
        return input.All(char.IsDigit);
    }

    private bool IsValidNEQFormat(string neq)
    {
        return (neq.StartsWith("11") || neq.StartsWith("22") || neq.StartsWith("33") || neq.StartsWith("88"));
    }

    public void FormatCodeRBQ(ChangeEventArgs e)
    {
        char last = '0';
        var input = e.Value?.ToString() ?? string.Empty;

        // Remove any character that is not a digit or a dash ('-')
        //input = new string(input.Where(c => char.IsDigit(c) || c == '-').ToArray());

        // Remove existing dashes to properly reformat
        input = input.Replace("-", "");

        // Limit to a maximum of 10 digits (excluding dashes)
        if (input.Length > 10)
        {
            input = input.Substring(0, 10);
        }

        try
        {
            last = input[input.Length - 1];
        }
        catch{}

        if (!char.IsDigit(last) && last != '-')
        {
            input.Remove(input.Length - 1);
        }

        // Insert dashes at the correct positions
        if (input.Length > 3)
        {
            input = input.Insert(4, "-");
        }
        if (input.Length > 8)
        {
            input = input.Insert(9, "-");
        }

        // Set the formatted value back
        codeRBQ = input;        
    }
    //Traite l'information de l'adresse
    public List<Fiche>? records = null;

    string numLicence;
    string statutLicence;

    string numCivique;
    string nomRue;
    string codePostal;
    string province;
    string nomVille;

    protected async Task FetchRecordNEQ()
    {
        Console.WriteLine("FetchNEQ FUNCTION");
        isLoading = true;
        records = await DonnéesQuébecService.GetRecordByNEQAsync(codeNEQ);
        if (records == null)
        {
            FetchError();
            isLoading = false;
            StateHasChanged();
        }
        else
        {
            //Identification
            SharedData.NEQ = records[0].NEQ;
            SharedData.NomEntreprise = records[0].NomEntreprise;
            SharedData.Courriel = records[0].Courriel;

            //Adresse
            if (records[0].Adresse != null)
            {
                string[] parts = records[0].Adresse.Split(' ');

                int numParts = parts.Length;

                SharedData.NumCivique = parts[0];
                SharedData.CodePostal = parts[parts.Length - 2] + ' ' + parts[parts.Length - 1];
                SharedData.Province = parts[parts.Length - 4];
                SharedData.NomVille = parts[parts.Length - 5];
                numParts -= 5;

                for (int i = 1; i < numParts; i++)
                {
                    nomRue += parts[i];
                    if (i != numParts)
                        nomRue += ' ';
                }
            }           

            
            SharedData.NomRue = nomRue;
            SharedData.NumTelephone = records[0].NumTelephone;
            SharedData.RegionAdministrative = records[0].RegionAdministrative;
            SharedData.CodeRegionAdministrative = records[0].CodeRegionAdministrative;

            //RBQ
            SharedData.NumLicence = records[0].NumeroDeLicence;
            SharedData.StatutLicence = records[0].StatutLicence;
            SharedData.TypeLicence = records[0].TypeLicence;
            SharedData.CategorieLicence = records[0].CategorieLicence;
            SharedData.Restriction = records[0].Restriction;
           

            foreach(Fiche codeSousCat in records)
            {
                SharedData.CodesSousCat.Add(codeSousCat.SousCat);
            }

            isLoading = false;
            await OnDataFetched.InvokeAsync(true);

            CloseModal();
        }
    }

